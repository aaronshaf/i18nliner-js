{
  "extends": "eslint:recommended",
  "env": {
    "node": true,
    "es2022": true
  },
  "rules": {
    "no-extra-semi": "off",
    "no-new-object": "error",
    "no-prototype-builtins": "off",
    "no-shadow": "error",
    "no-useless-call": "error",
    "no-useless-escape": "off",
  },
  "overrides": [
    {
      "files": ["lib/extensions/*.js"],
      "env": { "browser": true, "node": false }
    }
  ]
}
